<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
	<div class="span6 offset3">


		<%= form_tag '/sessions', method: :post do %>
			<%= email_field_tag :email, nil, placeholder: "Email", maxlength: 150 %>
			<%= password_field_tag :password, nil, placeholder: "Password", maxlength: 150 %>
			<%= submit_tag "Sign in", class: "btn btn-primary" %>
		<% end %>
			
		<p>New user? <%= link_to "Sign up now!", signup_path %></p>
	</div>
</div>